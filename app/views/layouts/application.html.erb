  </head>


    <body id="page-top">
      <div class = "nav-bar">
        <div id="family-initial-logo">
          <% if current_user %>
            <%= link_to current_user.family.family_name[0].upcase, '/' %>
          <% end %>
        </div>
        <div class = "nav-bar-links">

          <% if current_user %>
            <%= link_to "Home", '/' %>  | Signed in as <%= current_user.first_name.capitalize %> in <%= current_user.family.family_name.capitalize %> family | <%= link_to "My Account", edit_path %> |<%= link_to "Logout", '/logout' %>
          <% else %>
            <%= link_to 'Login', '/login' %> | <%= link_to 'Signup', '/presignup' %> | <%= link_to "Create Family", new_family_path %>
          <% end %>
        </div>
      </div>


      <%= yield %>
