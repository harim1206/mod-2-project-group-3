<% if current_user.family != @family %>
  <%= render 'noaccess' %>
<% else %>
  <% if flash[:errors] %>
    <ul>
      <br/>
      <% flash[:errors].each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  <% end %><br/>

  <h2>Edit <%= @family.family_name %> Family</h2>

  <%= form_for @family do |f| %>
    <%= f.label :family_name %><br/>
    <%= f.text_field :family_name %><br/>
    <%= f.label :family_description %><br/>
    <%= f.text_area :family_info%><br/>
    <%= f.submit "Submit" %>
  <% end %>
<% end %>
