<% if !current_user.family.memories.include?(@memory) %>
  <%= render 'noaccess' %>
<% else %>
  <h2><%= @memory.title %></h2>

  <% if @memory.image.url != "/app/assets/images/missing_memory.jpg" %>
    <%= image_tag @memory.image.url(:medium) %><br/>
  <% elsif @memory.image_url && @memory.image_url.strip != "" %>
    <%= image_tag(@memory.image_url) %>
  <% else %>
    <%= image_tag "/assets/missing_memory.jpg" %>
  <% end %>
  <br>

  Description: <br/>
  <%=  @memory.description %> <br/><br/>

  Tagged People: <br/>
  <% @tagged_people.each do |p| %>
    <ul>
      <li><%= link_to p.full_name, p %></li>
    </ul>
  <% end %>
  <br/>

  <%= link_to("Edit Memory", edit_memory_path )%><br/>
  <%= link_to("All Memories", memories_path) %><br/>
<% end %>
