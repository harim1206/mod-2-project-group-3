<% if flash[:errors] %>
  <ul>
    <br/>
    <% flash[:errors].each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %><br/>

<%= form_for(@memory) do |f| %>
  <%= f.label :title %><br/>
  <%= f.text_field :title %><br/>
  <%= f.label :description %><br/>
  <%= f.text_field :description %><br/>
  <%= f.label :image_url %><br/>
  <%= f.text_field :image_url %><br/>
  <%= f.collection_check_boxes(:person_ids, @people, :id, :full_name) %><br/>
  <%= f.submit %>
<% end %>
