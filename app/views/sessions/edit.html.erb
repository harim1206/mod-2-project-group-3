<%= form_for @person, url:'updateaccount' do |f| %>
  <%= f.hidden_field :id, value: @person.id %>
  <%= f.label :username %><br/>
  <%= f.text_field :username %><br/>
  <%= f.label :password %><br/>
  <%= f.password_field :password %><br/>
  <%= f.label :password_confirmation %><br/>
  <%= f.password_field :password_confirmation %> <br/>
  <%= f.submit %>
<% end %>
