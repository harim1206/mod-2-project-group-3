<% if flash[:errors] %>
  <ul>
    <br/>
    <% flash[:errors].each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %><br/>

<h2>Type In Your Password</h2>
<center>
<div class= "formeditfamily">
<%= form_tag "/edit" do %>
  <%= label_tag :password %>
  <%= password_field_tag :password %><br/><br/>
  <%= submit_tag "Submit" %>
  <br/><br/>
</div>
</center>
<% end %>
