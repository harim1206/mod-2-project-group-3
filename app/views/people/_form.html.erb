<% if flash[:errors] %>
  <ul>
    <br/>
    <% flash[:errors].each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %><br/>


<body>
  <div class="bodypeople">
    <div class="formpeople">
<%= bootstrap_form_for @person, html: { multipart: true } do |f| %>


        <%= f.text_field :first_name %><br/>

        <%= f.text_field :last_name %><br/>

        <%= f.text_area :bio %><br/>

        <%= f.date_field :dob, label: "Birthday" %><br/>

        <%= f.date_field :dod, label: "Date of death" %><br/>

        <%= f.file_field :image %><br/>

        <% if @person == current_user %>
          <%= f.submit "Update Account" %>
        <% else %>
          <%= f.submit %>
        <% end %>
      <% end %>


</div>
</div>
</body>
