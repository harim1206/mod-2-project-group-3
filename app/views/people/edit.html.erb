<% if flash[:errors] %>
  <ul>
    <br>
    <% flash[:errors].each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>

<h1> Edit <%= @person.full_name %> </h1>

<%= form_for(@person) do |f| %>
  <%= f.hidden_field :password, value: @password %>
  <%= f.label :first_name %></br>

  <%= f.text_field :first_name %></br></br>

  <%= f.label :last_name %></br></br>

  <%= f.text_field :last_name %></br></br>

  <%= f.label :bio %></br></br>

  <%= f.text_field :bio %></br></br>

  <%= f.label :date_of_birth %></br></br>

  <%= f.text_field :dob %></br></br>

  <%= f.label :date_of_death %></br></br>

  <%= f.text_field :dod %></br></br>

  <%= f.label :picture %></br></br>

  <%= f.text_field :image_url %></br></br>

  <%= f.submit %>

<% end %>

</br></br>

<%= form_tag person_path(@person), method: 'delete' do %>
 <%= submit_tag('Delete Person') %>
 <% end %>
