
<h2> The <%= @family.family_name %> Family Tree </h2>
<div class="hc-edit-family"><%= link_to "Edit Family", edit_family_path(current_user.family)  %></div>

<div class="hc-people-container">
  <% @people.each do |person| %>
    <div>
      <div class="hc-person-img">
        <% if person.image_url %>
          <%=  link_to image_tag(person.image_url), person%></li>
        <% end %>
      </div>
      <div class="hc-person-name">
        <%= person.full_name %>
      </div>

    </div>
  <% end %>
</div>
